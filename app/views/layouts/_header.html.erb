<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <li><%= link_to "Home", root_url(:protocol => 'http') %></li>
	  <% if signed_in? %>
	  <li><%= link_to "Users", users_url(:protocol => 'http') %></li>
	  <li><%= link_to "Profile", user_url(current_user, :protocol => 'http') %></li>
	  <li><%= link_to "Settings", edit_user_url(current_user, :protocol => 'http') %></li>
	  <% end %>
      <li><%= link_to "Help", help_url(:protocol => 'http') %></li>
	  <% if signed_in? %>
	  <li><%= link_to "Sign out", signout_url(:protocol => 'http'), :method => :delete %></li>
	  <% else %>
      <li><%= link_to "Sign in", signin_url(:protocol => 'https') %></li>
	  <% end %>
    </ul>
  </nav>
</header>
