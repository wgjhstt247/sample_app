<% unless @feed_items.empty? %>
    <ol class="microposts" summary="User microposts" style="counter-reset: item <%= (@feed_items.current_page * @feed_items.per_page) - @feed_items.per_page %>">
        <%= render :partial => 'shared/feed_item', :collection => @feed_items %>
    </ol>
    <%= will_paginate @feed_items %>
<% end %>
