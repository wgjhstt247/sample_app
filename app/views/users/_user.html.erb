<li>
	<%= gravatar_for user, :size => 30 %>
	<%= link_to user.name, user_url(user, :protocol => 'http') %>
	<% if current_user.admin? %>
	|	<%= link_to "delete", user_url(user, :protocol => 'http'), :method => :delete, :confirm => "You sure?",
									:title => "Delete #{user.name}" %>
	<% end %>
</li>
